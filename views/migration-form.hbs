<div class="w-full">
    <p class="text-center">Masukkan detail akun Internet / E-Learning Anda untuk daftar SSO</p>
    {{#if error}}
        <p class="text-center text-red-500">{{error}}</p>
    {{/if}}
    <form action="/migration" method="POST">
        <div>
            <label for="ident" class="block text-sm font-medium leading-6 text-gray-900">NIM / NIP</label>
            <div class="mt-2">
                <input id="ident" name="ident" type="number" autocomplete="text" required class="block appearance-none w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
            </div>
        </div>
        <div>
            <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
            <div class="mt-2">
                <input id="password" name="password" type="password" autocomplete="password" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
            </div>
        </div>
        <div class="mt-5">
            <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Submit</button>
        </div>
    </form>
</div>